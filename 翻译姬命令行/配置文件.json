{
	"全局设置数据": {

		//基础设置
		"使用机翻": "GPT", //百度、阿里云、腾讯云、火山、GPT
		"源语言": "日语", //日语、英语、韩语、俄语、繁中、简中
		"目标语言": "简中", //简中、日语、英语、韩语
		"使用正则": null,
		"指令集名称": null, //Json模式指令集
		"Xml指令集名称": null, //Xml模式指令集
		"文本级多线程": true,
		"启用单组上限": false,
		"API单组上限": 50,

		//异常处理
		"无视返回空值": true,
		"机翻空值使用原文": false,
		"重复内容跳过": false,
		"无视返回原文": false,

		//读取设置
		"读取目录": null,
		"读取编码": "自动识别", //自动识别、Shift-JIS、UTF-8、GBK、UTF-16LE
		"读取后缀": "*.txt|*.json|*.ks|*.lua",

		//写出设置
		"写出目录": null,
		"写出编码": "UTF-16LE", //UTF-16LE、UTF-8、GBK
		"写出后缀": "", //写出的同时修改文件后缀，想修改成txt就写txt，不要写.txt
		"写出格式": "",
		"写出后删除源文件": false,

		//其它设置
		"内置中括号过滤": false, //内置[]的过滤
		"正则逆向写入": false, //一般情况下用于mtool的文本
		"单账号线程数": 1
	},
	"GPT设置数据": {

		//连接配置
		"是否Https": true,
		"连接域名": "api.openai.com",
		"连接路由": "/v1/chat/completions",
		"使用模型": "gpt-3.5-turbo",
		"Sakura机翻": false, //使用Sakura本地机翻时需要开启，搭配Sakura语境，使用专属模式进行机翻
		"简易模式": false, //针对比较笨的AI模型，开启此选项，与Sakura不能同时开启，使用对应的语境进行机翻

		//请求限制
		"次数限制": 3, //1分钟内最多允许请求的次数
		"Token限制": 40000, //1分钟内最多允许请求的token数
		"请求等待延迟": 60, //网络连接超时秒数

		//文本处理逻辑
		"单次机翻行": 12, //一次请求发送多少对话数
		"上下文提示": true, //发送上文内容，使GPT翻译更准确，会消耗大量token
		"上下文深度": 1, //发送的上文内容量
		"连续对话合并": true, //单行内因正则拆分的对话合并，大幅提升GPT翻译质量，一定程度防止错行
		"相邻对话合并": true, //单句拆成上下句的文本启用，提升GPT翻译质量，一定程度防止错行
		"输出人名优先词汇表": true, //被标记为人名的，直接使用词汇表进行人名替换

		//异常处理
		"错行重试数": 10, //发生错行时的重试次数
		"异常重试上限": 10, //发生其他异常时的重试次数
		"漏翻检测": false, //如果原文占据超过30%，将会重翻
		"漏翻重试次数": 3,
		"错误跳过": false, //遇到会导致机翻中止的异常时，跳过错误，使用原文替换，保证一口气全部机翻完，随后可配合补翻进行补全

		//请求参数设定
		"frequency_penalty": 0.3, //文本退化处理
		"temperature": 0.4, //文本输出随机性
		"top_p": 0.95, //质量采样
		"GPT词汇表": [],
		"语境": "",
		"翻后润色": false, //机翻完后进行润色
		"润色语境": null
	}
}
